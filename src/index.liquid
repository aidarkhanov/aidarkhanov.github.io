---
<!doctype html>
<html class="page" lang="{{ locale }}">

<head>
  <title>{{ name }} — {{ title }}</title>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="{{ description }}">

  <link rel="icon" type="image/png" sizes="160x160" href="/images/icons/160.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/images/icons/32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/images/icons/16.png">
  <link rel="icon" type="image/svg+xml" sizes="any" href="/images/icons/any.svg">
  <link rel="apple-touch-icon" href="/images/icons/160.png">
  <link rel="manifest" href="/manifest.json">
  <link rel="stylesheet" href="/styles/screen.css">
  <link rel="stylesheet" href="/styles/print.css" media="print">
</head>

<body class="page__body">

<header class="header">
  <section class="introduction">
    <h1 class="introduction__greeting">{{ introduction.greeting }}</h1>
    <p class="introduction__about">{{ introduction.about }}</p>
  </section>

  <nav class="language-switcher header__language-switcher" aria-labelledby="language-switcher">
    <h2 class="visually-hidden" id="language-switcher">{{ language_switcher.heading }}</h2>

    <ul class="language-switcher__list">
      <li class="language-switcher__list-item">
        <a class="language-switcher__language" aria-label="Latvian" href="/lv/">🇱🇻</a>
      </li>

      <li class="language-switcher__list-item">
        <a class="language-switcher__language" aria-label="Russian" href="/ru/">🇷🇺</a>
      </li>
    </ul>
  </nav>
</header>

<main class="main">
{%- for skill in skills %}
  <section class="skills">
    <h2 class="skills__heading">{{ skill.heading }}</h2>

    <dl class="skills__list">
    {%- for item in skill.list %}
      <dt class="skills__item-heading">{{ item.heading }}</dt>
      <dd class="skills__item-description">{{ item.description }}</dd>
    {%- endfor %}
    </dl>
  </section>
{%- endfor %}

  <section class="contacts">
    <h2 class="contacts__heading">{{ contacts.interface.heading }}</h2>

    <dl class="contacts__list">
      <dt class="contacts__label">{{ contacts.interface.email }}</dt>
      <dd class="contacts__item">
        <a class="contacts__link" href="mailto:{{ contacts.email }}">{{ contacts.email }}</a>
      </dd>

      <dt class="contacts__label">{{ contacts.interface.telegram }}</dt>
      <dd class="contacts__item">
        <a class="contacts__link" href="https://t.me/{{ contacts.telegram }}">@{{ contacts.telegram }}</a>
      </dd>
    </dl>
  </section>
</main>

<footer class="copyright">
  <p class="copyright__item">{% year %}</p>
  <p class="copyright__item copyright__item--love" aria-hidden="true">{{ copyright.love_decorative }}</p>
  <p class="visually-hidden">{{ copyright.love }}</p>
</footer>

<script type="module" src="/scripts/main.js"></script>

</body>

</html>
