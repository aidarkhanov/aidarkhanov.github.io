    <h2 class="skills__heading">{{ skill.name }}</h2>

    <dl class="skills__list">
    {%- for item in skill.list %}
      <dt class="skills__list-heading">{{ item.heading }}</dt>
      <dd class="skills__list-description">{{ item.description }}</dd>
    {%- endfor %}
    </dl>
  </section>
{%- endfor %}

  <section class="contacts">
    <h2>Connect with me!</h2>

    <a class="contacts__link" href="mailto:{{ contacts.email }}">{{ contacts.email }}</a>
    <a class="contacts__link" href="tel:{{ contacts.phone }}">{{ contacts.phone }}</a>
